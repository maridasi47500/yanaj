  <main class="site-main" role="main">
                <div class="page-category-container bg-gray-100">
        <div class="page-content category">
            <div class="page-banner">
                <div class="banner standard-green">
                    <div class="container">
                        <div class="flex row">
                            <div class="breadcrumb"><span><span><a href="https://www.yana-j.fr/">Accueil</a> &gt; <span class="breadcrumb_last" aria-current="page"><%=@category.title%></span></span></span></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="category-content">
                <div class="flex items-stretch flex-col md:flex-row">
                    <div class="thumbnail w-full md:w-1/3" style="background-image: url('<%=@category.image%>')">
                        <span class="sr-only"><%=@category.title%></span>
                    </div>

                    <div class="content w-full md:w-2/3 bg-white">
                        <h1 class="font-bold"><%=@category.title%></h1>

                        <div class="font-normal lead-paragraph">
                            <%=@category.intro.html_safe%>

                        </div>

                        <div class="content-teaser">
                          <%=@category.description.html_safe%>
                        </div>
                        <%if @category.readmore%>
                             <div class="read-more-container">
                                <button class="read-more js-teaser-trigger">
                                    Lire
                                    <svg width="20" height="20" role="img">
                                        <use xlink:href="https://www.yana-j.fr/wp-content/themes/yanaj/static/dist/img/svg-defs.svg#icn_plus"/>
                                    </svg>
                                </button>
                            </div>

                            <div class="content-hidden hidden js-teaser-content">
                                <%=@category.readmore.html_safe%>


                                <button class="read-more hidden js-teaser-trigger-close">
                                    Fermer
                                    <svg width="20" height="20" role="img">
                                        <use xlink:href="https://www.yana-j.fr/wp-content/themes/yanaj/static/dist/img/svg-defs.svg#icn_plus"/>
                                    </svg>
                                </button>
                            </div>
                            <%end%>
                                            </div>
                </div>
<%if @category.plans.length > 0%>
<div class="dispositifs-wrapper">
                        <div class="container">
                            <div class="row text-center">
                                <h2 class="font-bold text-black-100">Les structures et dispositifs pour t'accompagner</h2>
                            </div>

                            <div class="row dispositif-list-wrapper">
                                <div class="flex flex-wrap justify-center dispositif-list">
<%=render partial: "categoryplan", as: :plan, collection: @category.plans%>
                                                                    </div>
                            </div>
                        </div>
                    </div>
<%end%>
                <%if @category.othercategories.length > 0%>
                    <div class="read-more-section bg-white">
                        <div class="container">
                            <div class="row rubriques-list-wrapper cross-content">
                                <h3 class="font-bold text-black-100">Voir aussi...</h3>
                                <div class="flex flex-wrap rubriques-list items-stretch category-cross-content">
                                                                                                                                                            <div class="w-full md:w-1/2 lg:w-1/3 xl:w-1/4 rubrique-wrapper">
    <%=render collection: @category.othercategories, as: :category, partial: "category"%>
                                                                                                                                                                <div class="w-full md:w-1/2 lg:w-1/3 xl:w-1/4 rubrique-wrapper">
    
</div>
                                                                                                                                                                                        </div>
                            </div>
                        </div>
                    </div>
                    <%end%>
                            </div>
        </div>
    </div>
        </main>