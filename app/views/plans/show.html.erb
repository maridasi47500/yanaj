 <main class="site-main" role="main">
                <div class="page-dispositif-container bg-white">
        <div class="page-content dispositif">
            <div class="page-banner">
                <div class="banner standard-green">
                    <div class="container">
                        <div class="flex row">
                            <div class="breadcrumb"><span><span><a href="https://www.yana-j.fr/">Accueil</a> &gt; <span class="breadcrumb_last" aria-current="page"><%=@plan.title%></span></span></span></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="dispositif-content">
                <div class="flex items-stretch flex-col md:flex-row main-content">
                    <div class="thumbnail w-full md:w-1/3" style="background-image: url(https://www.yana-j.fr/wp-content/uploads/2019/11/Sans-titre-6.jpg)">
                        <span class="sr-only"><%=@plan.title%></span>
                    </div>

                    <div class="content w-full md:w-2/3 bg-white">
                        <h1 class="font-bold"><%=@plan.title%></h1>

                        <div class="font-normal lead-paragraph">
<%=@plan.intro%>
                        </div>

                        <div class="content-teaser">
                <%=@plan.description.html_safe%>
                        </div>
                            <%if @plan.readmore%>
<div class="read-more-container">
                                <button class="read-more js-teaser-trigger">
                                    Lire
                                    <svg width="20" height="20" role="img">
                                        <use xlink:href="https://www.yana-j.fr/wp-content/themes/yanaj/static/dist/img/svg-defs.svg#icn_plus"></use>
                                    </svg>
                                </button>
                            </div>
<div class="content-hidden js-teaser-content" style="margin-top: 0px; display: none;">
                               <%=@plan.readmore%>


                                <button class="read-more js-teaser-trigger-close hidden">
                                    Fermer
                                    <svg width="20" height="20" role="img">
                                        <use xlink:href="https://www.yana-j.fr/wp-content/themes/yanaj/static/dist/img/svg-defs.svg#icn_plus"></use>
                                    </svg>
                                </button>
                            </div>                          
  <%end%>

                                            </div>
                </div>

                                
                                <div class="map-section mt-12">
    <div class="container">
        <div class="row">
            <h3 class="font-bold text-black-100">OÃ¹ se renseigner ?</h3>

                        <div class="map_dispositif" id="map_dispositif">
                <div class="zoom_overlay">Cliquez pour pouvoir zoomer sur la carte.</div>
            </div>
        </div>
    </div>
</div>
<%=render collection: @plan.videos, partial: "video", as: :video%>
<div class="zones-section">
    <div class="zone-wrapper js-accordion">
    <%@plan.cityzones.each do |zone|%>
    <div class="zone-head js-zone-head" aria-expanded="false">
        <div class="container">
            <div class="flex row justify-between">
                <span>
                    <%=zone.title%> :  <strong><%=zone.cities.map(&:name).join(', ')%></strong>
                </span>

                <svg width="35" height="35" role="img" class="js-plus">
                    <use xlink:href="https://www.yana-j.fr/wp-content/themes/yanaj/static/dist/img/svg-defs.svg#icn_plus_green"/>
                </svg>

                <svg width="35" height="35" role="img" class="js-minus hidden">
                    <use xlink:href="https://www.yana-j.fr/wp-content/themes/yanaj/static/dist/img/svg-defs.svg#icn_minus_green"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="zone-content bg-gray-100 py-6 js-zone-content" aria-expanded="false">
        <div class="container">
            <div class="flex flex-col md:flex-row flex-wrap zones-list -mx-10">
                               <%=render collection: @plan.addresses.withzone(zone.id), as: :address, partial: "address"%>
             </div>
    </div>
    </div>
    <%end%>
                                                                                                                                                                                                                                                                                        </div>
                <%if @plan.otherplans.length > 0%>
<div class="cross-content-section">
                        <div class="container">
                            <div class="row rubriques-list-wrapper cross-content">
                                <h3 class="font-bold text-black-100">Voir aussi...</h3>

<div class="flex flex-wrap rubriques-list items-stretch category-cross-content">
<%=render collection: @plan.otherplans, as: :plan, partial: "plan"%>
</div>
                            </div>
                        </div>
                    </div>
<%end%>
                            </div>
        </div>
    </div>
        </main>